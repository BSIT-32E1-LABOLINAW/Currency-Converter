@{
    ViewData["Title"] = "Currency Converter";
}

<h1>Currency Converter</h1>

<form method="post" action="/Currency/Convert">
    <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="number" class="form-control" id="amount" name="amount">
    </div>
    <div class="form-group">
        <label for="fromCurrency">From Currency:</label>
        <select class="form-control" id="fromCurrency" name="fromCurrency">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="GBP">GBP</option>
            <!-- Add other currencies as needed -->
        </select>
    </div>
    <div class="form-group">
        <label for="toCurrency">To Currency:</label>
        <select class="form-control" id="toCurrency" name="toCurrency">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="GBP">GBP</option>
            <!-- Add other currencies as needed -->
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Convert</button>
</form>

@if (ViewBag.ConvertedAmount != null)
{
    <div class="mt-3">
        <h2>Conversion Result:</h2>
        <p>@ViewBag.ConvertedAmount @ViewBag.ToCurrency</p>
    </div>
}
